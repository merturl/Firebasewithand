<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jongho.newproject_1.getItemActivity"
    tools:showIn="@layout/app_bar_get_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/getImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:contentDescription="이미지를 넣어주세요" />


        <EditText
            android:id="@+id/edit_Gettitle"
            android:layout_width="380dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/edit_Getcontent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUser"
            tools:ignore="LabelFor,MissingConstraints" />

        <EditText
            android:id="@+id/edit_Getcontent"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Content"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/edit_Gettime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editGettitle"
            tools:ignore="LabelFor,MissingConstraints" />

        <EditText
            android:id="@+id/edit_Gettime"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="47dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Time"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/btnGetItem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editGetcontent"
            tools:ignore="LabelFor,MissingConstraints" />

        <Button
            android:id="@+id/btnGetItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="296dp"
            android:onClick="saveGetItem"
            android:text="GET IT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_Gettime"
            tools:ignore="MissingConstraints"
            android:textColor="@color/white"
            android:backgroundTint="@color/cast_expanded_controller_background_color"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
